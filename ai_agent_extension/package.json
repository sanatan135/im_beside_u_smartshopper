{
  "name": "shopsmarter-extension",
  "version": "0.0.4",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run copy-files && npm run fix-paths",
    "copy-files": "cp background.js content.js capture-overlay.css manifest.json dist/ && cp -r assets dist/",
    "fix-paths": "sed -i 's|/assets/|../../assets/|g' dist/src/popup/index.html",
    "preview": "vite preview",
    "watch": "vite build --watch"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^6.0.1"
  }
}
